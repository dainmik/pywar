// https://cspell.org/
{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "language": "en",
    "flagWords": [
        // List of words to be always considered incorrect
        "hte" // should be "the"
    ],
    "ignorePaths": [
        "cspell.json",
        ".venv/**"
    ],
    "dictionaryDefinitions": [
        {
            // Contains words that are use in the project
            "name": "project",
            "path": ".cspell/project.txt",
            "addWords": true,
        },
        {
            // Contains words that are used by Python and external packages
            "name": "python_extra",
            "path": ".cspell/python_extra.txt",
            "addWords": true,
        },
        {
            // Contains words that do not fit in other dictionaries
            "name": "workspace",
            "path": ".cspell/workspace.txt",
            "addWords": true,
        }
    ],
    "dictionaries": [
        "python",
        "python_extra",
        "project",
        "workspace"
    ],
    "useGitignore": true
}